<p style="color: green"><%= notice %></p>

<h1>Beers</h1>

<div id="beers">
  <% @beers.each do |beer| %>
    <div id="<%= dom_id beer %>">
      <p>
        <strong>Name:</strong>
        <%= link_to beer.name, beer %>
      </p>

      <p>
        <strong>Style:</strong>
        <%= beer.style %>
      </p>

      <p>
        <strong>Brewery:</strong>
        <%= link_to beer.brewery.name, beer.brewery %>
      </p>

    </div>
  <% end %>
</div>

<%= link_to('New Beer', new_beer_path) if current_user %>

<%= link_to "list of breweries", breweries_path  %>
